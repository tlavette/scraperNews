<main role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">Black America Web News!</h1>
            <p><a class="btn btn-primary btn-lg color:#67aeca" href="/scrape" target="_blank" role="button">What's New!
                    &raquo;</a></p>
        </div>
    </div>

    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <ul>
                {{#each articles}}
                <div class="col-md-8">
                    <li>
                        <h3>{{this.title}}</h3>
                        <a class="btn btn-secondary" id="addnote" value="{{this._id}}" href="{{this.link}}"
                            target="_blank" role="button">View Article &raquo;</a>
                        <a class="btn btn-secondary" href="#" role="button">Add Note</a>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Note</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" value="{{this.note}}" rows="3"></textarea>
                        </div>


                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="{{this._id}}">
                            <label class="form-check-label" for="inlineCheckbox1">Save Article</label>
                        </div>
                        <br>
                        <br>
                    </li>
                </div>
                {{/each}}
            </ul>
        </div>
        <hr>
    </div> <!-- /container -->
</main>